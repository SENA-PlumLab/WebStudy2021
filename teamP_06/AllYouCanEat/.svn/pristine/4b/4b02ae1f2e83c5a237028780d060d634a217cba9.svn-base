 * {margin: 0; padding: 0; box-sizing: border-box;}
a {text-decoration: none; color: #000000;}
ul, li {list-style: none;}
.wrap {min-width: 1100px; margin: 0 auto;}
/*
    메인컬러 : #FEE200 
    메인 서브 컬러 : #FFB10A
    섹션 배경 컬러 : #FFFFC8
    회색, 하단 : #7F7F7F
*/

button {
    background-color: #FFB10A;
    border: none;
    padding: 15px;
    border-radius : 30px;
    font-size : 20px;
    color: #ffffff;
}
button:hover{
    cursor: pointer;
}
.cancle_btn{
    background-color: #d1d1d1;
    border: none;
    padding: 15px;
    border-radius : 30px;
    font-size : 20px;
    color: #ffffff;
}
/*  헤더 영역 */


/* 헤더 네비 */
header {
    width: 100%;
    background-color: #FEE200;
}
header .header_nav {
    width: 100%;
    height: 75px;
    background-color: #FEE200;
    display: inline-block;
}  
header .header_nav .logo {
    padding: 10px 25px;
    display: inline-block;
}

header .header_nav .logo a img {
    width: 130px;
}

header .header_nav ul{
    overflow: hidden;
    display: inline;
}
header .header_nav ul li {
    float: right;
    padding: 25px;
}
header .header_nav ul li a{
    color: #ffffff;
}

/* 헤더 메인 */

header .header_tag {
    padding: 20px;
    background-color: #ffffff;
    background-image: url();
    text-align: center;
}
header .header_tag button {
    margin: 0px 10px;
}

/* 검색창*/

.search_bar{
    width: 400px;
    height: 50px;
    margin: 0 auto;
    border: 3px solid #ffffff;
    border-radius: 25px;
    position: relative;
    background-color: #ffffff;
    position: absolute;
    top : 10px;
    left : 200px;
}
.search_bar .search_text{
    width: 250px;
    padding: 10px;
    position: absolute;
    left: 20px;
    top : 6px;
    border: none;

}
.search_bar button{
    position: absolute;
    right: -5px;
    top: -3.5px;
    padding: 10px 40px;
    color: #ffffff;
    background-color: #FEE200;
    border: 2px solid #ffffff;
    border-radius: 50px;
    cursor: pointer;
}


/* 섹션 */
section {
    background-color: #FFFFC8;
    width: 100%;
}
section .wrap {
    background-color: #FFFFC8;
}
section .wrap > article {
    margin: 0 auto;
    padding: 30px;
    max-width: 1100px;
    overflow: hidden;
}
section .wrap article > div {
    width: 30%;
    margin: 17px;
    border: 1px solid #7F7F7F;
    float : left;
    background-color: #ffffff;
}
section .wrap article > div > div {
    width: 33.333%;          
    float : left;
    background-color: #ffffff;
}
section .wrap article div .img {
    width: 100%;
    overflow: hidden;

}
section .wrap article div .img img {
    width: 100%;
    height: 200px;
    /* 이미지 짤림 */
    object-fit:cover;
}

section .wrap article div .text {
    width: 100%;
    height: 150px;
    padding: 10px;
    text-align: center;
}
section .wrap article div .text h2 {
    padding: 5px;
}



/* 풋터 */
footer {
    background-color: #7f7f7f;
    text-align: center;
    color: #ffffff;
}
footer .wrap{
    background-color: #7f7f7f;
}
footer h5 {
    padding: 30px;
}