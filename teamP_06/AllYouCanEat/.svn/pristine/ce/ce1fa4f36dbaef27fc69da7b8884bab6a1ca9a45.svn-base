/*게시글 본문*/
#bo_v_atc {
	min-height: 200px;
	height: auto !important;
	height: 200px;
	padding-top: 50px;
	padding-bottom:10px;
	border-bottom: 3px solid #FEE200;
	background-color: #ffffff;
	
}

#bo_v_atc_title {
	position: absolute;
	font-size: 0;
	line-height: 0;
	overflow: hidden;	
}
/*게시글 본문 시작*/
#bo_v_con {
	width: 100%;
	line-height: 1.7em;
	min-height: 200px;
	word-break: break-all;
	overflow: hidden;
	padding:20px;
	
}
#bo_v_con_res {
	width: 100%;
	line-height: 1.7em;
	min-height: 50px;
	word-break: break-all;
	overflow: hidden;
	padding:20px;
	border-top: 1px solid #FEE200;	
}
#bo_v_con_res span{
	display: block;
	font-size: 20px;
	margin: 5px;
	word-break: break-all;
	font-weight: 500;
	font-family: 'Noto Sans KR', sans-serif;
	line-height:25px;
}

#bo_v_con a {
	color: #000;
	text-decoration: underline
}

#bo_v_con img {
	max-width: 100%;
	height: auto
}

.btn {
	 background-color: #FEE200 ;
	 color: rgba(256, 256, 256, 1);
	 border: 0;
	 border-radius: 15px;
	 display: inline-block;
	 margin: 15px auto;
	 padding: 0px;
	 width: 120px;
	 height: 40px;
	 font-size: 18px;
	 font-weight: bold;
	 
	 cursor: pointer;
	 opacity: 1;
	 visibility: visible;
	 -webkit-transition: all 0.3s ease;
}

.btn:hover{
	 transition: all 0.3s ease;
	 background-color: rgba(194, 20, 45, 0.8);
	 color: rgba(256, 256, 256, 1);
}

/* 글쓰기 버튼 */

.write-btn-holder {
	height:70px;
	padding: 0 10px;
	padding-left:30px;
	color: #777;
	line-height: 10px;
}
.write-btn-holder span{
	float:left;
	 color: #000000;
	 font-size: 20px;
	 padding: 10px;
    line-height: 30px;
}
.write-btn-holder .btn {
	float:right; 
	margin: 0;
	visibility:hidden;
}